<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_relatorio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="badgears.storecheck.Relatorio">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Informe a data:"/>
    <EditText
        android:id="@+id/etDataRelatorio"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_below="@+id/textview1"/>
    <Button
        android:id="@+id/btnData"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/etDataRelatorio"
        android:drawableTop="@drawable/ic_data"
        android:layout_below="@id/textview1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:layout_below="@+id/etDataRelatorio"
        android:src="@drawable/logomarca"/>
    <RadioButton
        android:id="@+id/rbOpcaoRelatorio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:checked="true"
        android:layout_below="@+id/etDataRelatorio"
        android:text="PDB"/>
    <RadioButton
        android:id="@+id/rbOpcaoRelatorio2"
        android:layout_width="wrap_content"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDataRelatorio"
        android:layout_toRightOf="@+id/rbOpcaoRelatorio1"
        android:text="Bscoitos"/>
    <RadioButton
        android:id="@+id/rbOpcaoRelatorio3"
        android:layout_width="wrap_content"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDataRelatorio"
        android:layout_toRightOf="@+id/rbOpcaoRelatorio2"
        android:text="Opção 3"/>
    <RadioButton
        android:id="@+id/rbOpcaoRelatorio4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@+id/etDataRelatorio"
        android:layout_toRightOf="@+id/rbOpcaoRelatorio3"
        android:text="Opção4"/>
    <Button
        android:id="@+id/btnGerarRelatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbOpcaoRelatorio1"
        android:text="Gerar Relatorio"/>
    <Button
        android:id="@+id/btnVoltarRelatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
