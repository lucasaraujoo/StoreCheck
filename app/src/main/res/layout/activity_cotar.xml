<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cotar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="badgears.storecheck.Cotar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:id="@+id/textView2"/>
    <EditText
        android:id="@+id/etNomeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade: "
        android:layout_below="@+id/etNomeCliente"
        android:id="@+id/textView3"/>
    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/etCidade"
        android:layout_below="@+id/textView3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: "
        android:layout_below="@+id/etNomeCliente"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_toRightOf="@+id/textView3"
        android:id="@+id/textView4"/>
    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/etCidade"
        android:layout_below="@+id/textView3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etData">
     <ListView
         android:id="@+id/ListaProdutos"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"></ListView>

    </LinearLayout>



</RelativeLayout>
