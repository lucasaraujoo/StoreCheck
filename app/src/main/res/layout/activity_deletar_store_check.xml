<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deletar_store_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="badgears.storecheck.DeletarStoreCheck">

    <TextView
        android:id="@+id/tvDeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar Storecheck por data"
        android:textSize="25dp"
        android:gravity="top|center"/>
    <TextView
        android:id="@+id/tvDatadeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDeletar"
        android:textAlignment="center"
        android:text="Escolha a data"/>
    <EditText
        android:id="@+id/edDataDeletar"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:inputType="date"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDatadeletar"/>
    <Button
        android:id="@+id/btnDataDeletar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/ic_data"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvDatadeletar"/>
    <Button
        android:id="@+id/btnDeletarPordata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar por data"
        android:layout_below="@+id/btnDataDeletar"/>
    <TextView
        android:id="@+id/tvOu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ou"
        android:textAlignment="center"
        android:layout_below="@+id/btnDeletarPordata"
        android:textSize="35dp"/>
    <View
        android:id="@+id/viewSeparador"
        android:layout_below="@+id/tvOu"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/tvDeletarUltimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSeparador"
        android:layout_marginTop="12dp"
        android:text="Deletar ultimo Storecheck"
        android:textSize="25dp"
        android:gravity="top|center"/>
    <Button
        android:id="@+id/btnDeletarPorUltimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDeletarUltimo"
        android:text="Deletar ultimo store check"/>

</RelativeLayout>
